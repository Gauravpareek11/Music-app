<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<div id='notifications'>
<%= 'Notification' %>
<% @notification.each do |note| %>
<%= note.sender_id %>
<%# <% binding.pry%>
<%= note.body %>
<% end %>
</div>
<h1>Welcomes#index</h1>
<p>Find me in app/views/welcomes/index.html.erb</p>
<%= link_to 'chats',conversations_path %>
<%= link_to 'create_products',new_product_path %>
<% @items.each do |item|%>
<%= item.title%>
<%= item.description%>
<% item.images.each do |image| %>
  <%= image_tag image %>
<% end %>
<h2>Start a Conversation</h2>
<%= form_with(model: Conversation.new, url: conversations_path) do |form| %>
  <%= form.hidden_field :recipient_id, value: item.user_id %>
  <%= form.submit "Start Conversation" %>
<% end %>
<%= form_with(model: Notification.new, url: notifications_path,method: :post,id:'noti-form') do |form| %>
  <%= form.hidden_field :recipient_id, value: item.user_id %>
  <%= form.hidden_field :body, value: {name:'Gaurav',age:'10'}.to_json %>
  <%= form.submit "Interested" ,id: 'notification_submit'%>
<% end %>
<% end %>
<div id="reciever" data-reciever-id="<%=2%>">
<% if current_user %>
<div id="sender" data-sender-id="<%=current_user.id%>">
<%end%>
