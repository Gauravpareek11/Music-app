<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%= image_path('caraousel_item-1.jpg') %>" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= image_path('caraousel_item-2.jpg') %>" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= image_path('caraousel_item-3.jpg') %>" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<h2>List of posted Instrumental Items</h2>
<div class="d-flex flex-wrap">
  <% @items.each do |item|%>
  <%= render partial: "item_card", locals: { item: item } %>
  <% end %>
</div>
<h2>List of Required Instrumental Items</h2>
<div class="d-flex flex-wrap">
  <% @require.each do |item|%>
    <%= render partial: "item_card", locals: { item: item } %>
  <% end %>
</div>
<div id="reciever" data-reciever-id="<%=2%>">
<% if current_user %>
  <div id="sender" data-sender-id="<%=current_user.id%>">
<% end %>