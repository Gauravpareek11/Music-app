<div class="card-body mx-auto w-50 mt-4">
  <h1 class="mb-4">User Dash Board</h1>
  <div class="row">
    <div class="col-sm-3">
      <h6 class="mb-0">Name</h6>
    </div>
    <div class="col-sm-9 text-secondary"> <%= @user.name %> </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-3">
      <h6 class="mb-0">Email</h6>
    </div>
    <div class="col-sm-9 text-secondary"> <%= @user.email %></div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-3">
      <h6 class="mb-0">Role</h6>
    </div>
    <%if @user.admin? %>
      <div class="col-sm-9 text-secondary"> Admin</div>
    <% else %>
      <div class="col-sm-9 text-secondary">Normal User</div>
    <% end %>
  </div>
  <hr>
  <% unless @user.admin? %>
    <div class="row">
      <div class="col-sm-3">
        <h6 class="mb-0">No of items posted</h6>
      </div>
      <div class="col-sm-9 text-secondary"> <%= @user.products.my_seller.count %></div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-3">
        <h6 class="mb-0">No of Requirements posted</h6>
      </div>
      <div class="col-sm-9 text-secondary"> <%= @user.products.my_buyer.count %></div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-3">
        <h6 class="mb-0">No of items Rejected</h6>
      </div>
      <div class="col-sm-9 text-secondary"> <%= @user.products.rejected_sellers.count %></div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-3">
        <h6 class="mb-0">No of Requiremenets Rejected</h6>
      </div>
      <div class="col-sm-9 text-secondary"> <%= @user.products.rejected_buyers.count %></div>
    </div>
    <hr>
  <% end %>
  <% if @user.admin? %>
    <%= link_to 'Categories',categories_path,class:"card-button" %>
    <%= link_to 'Sub_categories',sub_categories_path,class:"card-button" %>
    <%= link_to 'pending_approvals',pending_approvals_admin_index_path,class:"card-button" %>
  <% else %>
    <%= link_to 'Your_posted_items',items_posted_path,class:"card-button" %>
    <%= link_to 'Your_posted_requirements',requirements_posted_path,class:"card-button" %>
    <%= link_to 'Your_pending_posts',pending_items_path,class:"card-button" %>
  <% end %>
</div>
