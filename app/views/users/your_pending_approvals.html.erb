<% if !@pending_items.empty? %>
  <h2 class="display-2 text-center mb-4">List of Pending Items Posted By You </h2>
  <div class="container">
    <div class="row">
      <% @pending_items.each do |item|%>
        <div class="col-md-4 mb-4">
          <%= render partial: "welcomes/item_card", locals: { item: item } %>
        </div>
      <% end %>
    </div>
    <%= paginate @pending_items %>
  </div>
<% else %>
  <h1 class="text-center mt-2"> No pending Post</h1>
<% end %>