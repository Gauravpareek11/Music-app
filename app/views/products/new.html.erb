<%= form_with model: @product,url: products_path do |form| %>
  <div class="mb-3">
    <%= form.label :title,class:"form-label" %><br>
    <%= form.text_field :title,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :description,class:"form-label"  %><br>
    <%= form.text_area :description,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :user_name,class:"form-label" %><br>
    <%= form.text_field :user_name,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :phone_number,class:"form-label" %><br>
    <%= form.text_field :phone_number,class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :price,class:"form-label" %><br>
    <%= form.text_field :price,class:"form-control" %>
  </div>
  <div>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :products,{ prompt: true }, { class: 'category-select' } %>
</div>
<div>
    <%= form.label :sub_category_id %>
    <%= form.collection_select :sub_category_id, [], :id, :items, {prompt: true}, {class: 'subcategory-select', disabled: true }%>
</div>
 <div class="mb-3">
    <%= form.label :location,class:"form-label"  %><br>
    <%= form.text_area :location,class:"form-control" %>
  </div>
<div>
    <%= form.label :role %>
    <%= form.select :role,["Buyer","Seller"]%>
</div>
<div>
<%= form.file_field :images, multiple: true%>
</div>
  <div>
    <%= form.submit 'Create product',class:"btn btn-primary btn-lg"%>
  </div>
<% end %>
